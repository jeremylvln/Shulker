{
  "name": "shulker-operator",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shulker-operator/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build",
        "cwd": "packages/shulker-operator"
      },
      "inputs": ["default", "rust:dependencies"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test",
        "cwd": "packages/shulker-operator"
      },
      "inputs": ["default", "rust:dependencies"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt",
        "cwd": "packages/shulker-operator"
      },
      "inputs": ["default", "rust:dependencies"]
    },
    "publish-docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash scripts/publish_docker.sh shulker-operator"
      }
    }
  },
  "implicitDependencies": ["shulker-crds", "shulker-utils", "google-agones-crds", "shulker-sdk-bindings-rust"],
  "tags": ["lang:rust"]
}
