{
  "name": "shulker",
  "version": "0.0.0",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "postinstall": "npm run tools:install",
    "tools:install": "bash scripts/download_tools.sh",
    "crd:install": "kustomize build kube/resources/crd | kubectl apply -f -",
    "crd:uninstall": "kustomize build kube/resources/crd | kubectl delete -f -",
    "config:gen": "bash scripts/generate_config.sh"
  },
  "devDependencies": {
    "nx": "16.2.2",
    "prettier": "2.6.2"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ]
}
